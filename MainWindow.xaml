<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Snake" Height="600" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True" Loaded="Window_Loaded" KeyDown="Window_KeyDown">
    <Grid Background="#FFBDBDBD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_Spiel">
                <MenuItem Header="_Beenden" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Canvas x:Name="playground" Grid.Row="1"/>
        <Label x:Name="showPoints" Content="0" HorizontalContentAlignment="Right" FontSize="20" Margin="0,20,30,0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Label x:Name="showTime" Content="0" HorizontalContentAlignment="Right" FontSize="20" Margin="0,57,30,0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top"/>

    </Grid>
</Window>
