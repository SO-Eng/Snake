<Window x:Class="Snake.NameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Herzlichen Glückwunsch!" Height="205" Width="320" WindowStyle="ToolWindow" Topmost="True" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Label Content="Bitte geben Sie Ihren Namen ein:" HorizontalAlignment="Left" Margin="62,52,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textboxName" HorizontalAlignment="Left" Height="23" Margin="62,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184"/>
        <Button x:Name="ButtonNameOk" Content="Übernehmen" HorizontalAlignment="Left" Margin="112,131,0,0" VerticalAlignment="Top" Width="85" IsDefault="True" Click="ButtonNameOk_Click"/>

    </Grid>
</Window>
